<h2>职位管理</h2>
<%= link_to("新增职位",new_job_path,class:"btn btn-primary") %>
<table class="table table-hover">
	<thead>
		<tr>
			<th scope="col">职位名称</th>
			<th scope="col">职位描述</th>
			<th scope="col">最低薪资</th>
			<th scope="col">最高薪资</th>
			<th scope="col">操作</th>
		</tr>
	</thead>
	<tbody>
		<%@jobs.each do |job| %>
	    <!-- 相比在view中过滤，controller里过滤更优雅和合理 -->
		<tr>
			<td><%= link_to(job.title,job_path(job)) %></td>
			<td><%= job.description %></td>
			<td><%= job.salary_min %></td>
			<td><%= job.salary_max %></td>
			<td>
				<%= link_to("编辑",edit_job_path(job)) %>
				<%= link_to("删除",job_path(job),method: :delete,data:{confirm:"你确定删除吗？"}) %>
			</td>
		</tr>
		<%end %>
	</tbody>
</table>